<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:app2="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_second"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:context="com.example.himajaaman.customlistview.SecondActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        app:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />


    <Button
        android:id="@+id/recentLoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="20dp"
        android:background="@color/colorPrimary"
        android:text="recent location"
        android:textColor="@color/cast_libraries_material_featurehighlight_text_header_color" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/toolbar1"
        android:text="Employee ID"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recentLoc"
        android:layout_marginTop="56dp"
        android:layout_toEndOf="@+id/calButton"
        android:ems="10"
        android:hint="Date"
        android:inputType="date" />

    <ImageButton
        android:id="@+id/calButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app2:srcCompat="@android:drawable/ic_menu_my_calendar"
        android:background="@color/colorPrimary"

        android:layout_alignTop="@+id/editText3"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"

        android:text="Go"
        android:textColor="@color/cast_libraries_material_featurehighlight_text_header_color"
        android:layout_alignBottom="@+id/calButton"
        android:layout_toEndOf="@+id/editText3"
        android:layout_alignTop="@+id/editText3" />

    <Button
        android:id="@+id/admlogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/toolbar1"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:background="@color/cast_expanded_controller_text_color"
        android:text="Log out"
        android:textColor="@color/colorPrimary" />


</RelativeLayout>
